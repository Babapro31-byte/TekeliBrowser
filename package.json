{
  "name": "tekeli-browser",
  "version": "2.1.0",
  "description": "Ultra-modern desktop browser with Glassmorphism and Neon design",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "vite",
    "electron:build": "vite build && electron-builder",
    "perf": "node scripts/perf.js",
    "privacy": "node scripts/privacy.js"
  },
  "keywords": [
    "electron",
    "browser",
    "glassmorphism",
    "modern"
  ],
  "author": "TekeliBrowser",
  "license": "MIT",
  "dependencies": {
    "electron-updater": "^6.7.3",
    "framer-motion": "^11.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sql.js": "^1.13.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/sql.js": "^1.4.9",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "lighthouse": "^12.1.0",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-electron": "^0.28.2",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.tekeli.browser",
    "productName": "TekeliBrowser",
    "buildVersion": "2.1.0",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "asarUnpack": [
      "node_modules/sql.js/dist/sql-wasm.wasm"
    ],
    "extraResources": [
      {
        "from": "node_modules/sql.js/dist/sql-wasm.wasm",
        "to": "sql-wasm.wasm"
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "Babapro31-byte",
      "repo": "TekeliBrowser",
      "releaseType": "release"
    },
    "win": {
      "target": "nsis",
      "extraFiles": [
        {
          "from": "node_modules/sql.js/dist/sql-wasm.wasm",
          "to": "resources/sql-wasm.wasm"
        }
      ]
    },
    "mac": {
      "target": "dmg",
      "extraFiles": [
        {
          "from": "node_modules/sql.js/dist/sql-wasm.wasm",
          "to": "Resources/sql-wasm.wasm"
        }
      ]
    },
    "linux": {
      "target": "AppImage",
      "extraFiles": [
        {
          "from": "node_modules/sql.js/dist/sql-wasm.wasm",
          "to": "resources/sql-wasm.wasm"
        }
      ]
    },
    "electronDist": "node_modules/.cache/electron/dist",
    "electronVersion": "28.2.0",
    "npmRebuild": false,
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false
  }
}